# ============================================================================
# Firebase Configuration
# ============================================================================
# Get these from Firebase Console → Project Settings → Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY_ID=your-key-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app

# ============================================================================
# BINUS School API
# ============================================================================
API_KEY=your-binus-api-key-here

# ============================================================================
# ATTENDANCE API - DETECTION MODULE CREDENTIALS
# ============================================================================
# Generate new API keys using: python attendance-api-module/generate_api_keys.py
DETECTION_API_KEY_1=DETECT_xxxxx
DETECTION_API_KEY_2=DETECT_xxxxx
DETECTION_API_KEY_3=DETECT_xxxxx
DETECTION_API_SECRET=your-secret-key-here

# Enable attendance recording to Firebase
ATTENDANCE_DB_ENABLED=true

# ============================================================================
# Flask Configuration (Backend)
# ============================================================================
FLASK_ENV=production
PORT=8000

